{
    "name": "getherbie/herbie",
    "homepage": "https://herbie.tebe.ch/",
    "description": "Herbie CMS. Flat-file content management system with simple setup, no database, and just text files.",
    "keywords": [
        "herbie",
        "flat-file",
        "cms",
        "blog"
    ],
    "type": "library",
    "license": "BSD-3-Clause",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "codeception/c3": true
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "composer-runtime-api": "^2.0",
        "ausi/slug-generator": "^1.1",
        "imagine/imagine": "^1.3",
        "psr/container": "^1.1",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.1",
        "psr/simple-cache": "^1.0",
        "symfony/console": "^5.0",
        "symfony/yaml": "^5.4",
        "tebe/http-factory": "^2.0",
        "twig/twig": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "herbie\\": "src",
            "herbie\\sysplugin\\": "sysplugins"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "example\\": "example/src",
            "example\\site\\": "example/site",
            "tests\\": "tests"
        }
    },
    "require-dev": {
        "codeception/c3": "^2.7",
        "codeception/codeception": "^4.2",
        "codeception/module-asserts": "^1.0.0",
        "codeception/module-phpbrowser": "^1.0.0",
        "doctrine/rst-parser": "^0.5.2",
        "erusev/parsedown": "^1.7",
        "erusev/parsedown-extra": "^0.8.1",
        "friendsofphp/php-cs-fixer": "^3.11",
        "getherbie/plugin-simplecontact": "dev-master",
        "getherbie/plugin-simplesearch": "dev-master",
        "laminas/laminas-diactoros": "^2.17",
        "monolog/monolog": "^1.27",
        "netcarver/textile": "^3.7",
        "phpstan/phpstan": "^1.8",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/process": "^5.4"
    },
    "scripts": {
        "test": [
            "@phpcs",
            "@phpstan",
            "@codecept"
        ],
        "phpcbf": "./vendor/bin/phpcbf",
        "phpcs": "./vendor/bin/phpcs",
        "codecept": "./vendor/bin/codecept run",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit 256M",
        "start:test": "php -S localhost:9999 tests/_data/web/index.php",
        "start:website": "php -S localhost:9999 example/web/index.php",
        "debug:test": "HERBIE_DEBUG=1 XDEBUG_MODE=debug php -S localhost:9999 tests/_data/web/index.php",
        "debug:website": "HERBIE_DEBUG=1 XDEBUG_MODE=debug php -S localhost:9999 example/web/index.php"
    },
    "bin":["herbie"]
}
