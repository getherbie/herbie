{
    "name": "getherbie/herbie",
    "homepage": "http://www.getherbie.org",
    "description": "Herbie is a flat-file CMS & blog system. Simple installation - no database - just text files.",
    "keywords": [
        "herbie",
        "flat-file",
        "cms",
        "blog"
    ],
    "type": "library",
    "license": "BSD-3-Clause",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.4",
        "ausi/slug-generator": "^1.1",
        "imagine/imagine": "^1.3",
        "psr/container": "^1.1",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.1",
        "psr/simple-cache": "^1.0",
        "symfony/yaml": "^4.4",
        "tebe/http-factory": "^1.1",
        "twig/twig": "^2.15",
        "ext-json": "*",
        "getherbie/plugin-test": "^1.0",
        "getherbie/plugin-simplecontact": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "herbie\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "example\\": "example/src"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^7.5",
        "zendframework/zend-diactoros": "^2.2",
        "monolog/monolog": "^1.27",
        "phpstan/phpstan": "^1.8"
    },
    "scripts": {
        "test": [
            "@phpcs",
            "@phpunit"
        ],
        "phpcbf": "./vendor/bin/phpcbf",
        "phpcs": "./vendor/bin/phpcs",
        "phpunit": "./vendor/bin/phpunit"
    }
}
