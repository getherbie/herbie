{
    "name": "getherbie/herbie",
    "homepage": "http://www.getherbie.org",
    "description": "Herbie is a flat-file CMS & blog system. Simple installation - no database - just text files.",
    "keywords": ["herbie", "flat-file", "cms", "blog"],
    "type": "library",
    "license":"BSD-3-Clause",
    "prefer-stable" : true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.1.3",
        "ausi/slug-generator": "^1.1",
        "getherbie/composer": "^1.0",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/simple-cache": "^1.0",
        "symfony/yaml": "^4.2",
        "tebe/http-factory": "^1.1",
        "twig/twig": "^2.0",
        "zendframework/zend-eventmanager": "^3.2",
        "psr/log": "^1.1",
        "zendframework/zend-stdlib": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Herbie\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4",
        "phpunit/phpunit": "^7.5",
        "zendframework/zend-diactoros": "^2.1",
        "getherbie/plugin-simplecontact": "dev-master",
        "getherbie/plugin-simplesearch": "dev-master",
        "monolog/monolog": "^1.24"
    },
    "scripts": {
        "test": [
            "@phpcs",
            "@phpunit"
        ],
        "phpcbf": "./vendor/bin/phpcbf",
        "phpcs": "./vendor/bin/phpcs",
        "phpunit": "./vendor/bin/phpunit"
    }
}
