{
    "name": "getherbie/herbie",
    "homepage": "https://herbie.tebe.ch/",
    "description": "Herbie flat-file content management system. Simple setup - no database - just text files.",
    "keywords": [
        "herbie",
        "flat-file",
        "cms",
        "blog"
    ],
    "type": "library",
    "license": "BSD-3-Clause",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "composer-runtime-api": "^2.0",
        "ausi/slug-generator": "^1.1",
        "imagine/imagine": "^1.3",
        "psr/container": "^1.1",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.1",
        "psr/simple-cache": "^1.0",
        "symfony/yaml": "^5.4",
        "tebe/http-factory": "^1.1",
        "twig/twig": "^3.4",
        "getherbie/plugin-test": "^1.0",
        "getherbie/plugin-simplecontact": "dev-master",
        "getherbie/plugin-simplesearch": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "herbie\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "example\\": "example/src"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "zendframework/zend-diactoros": "^2.2",
        "monolog/monolog": "^1.27",
        "phpstan/phpstan": "^1.8",
        "erusev/parsedown": "^1.7",
        "erusev/parsedown-extra": "^0.8.1",
        "netcarver/textile": "^3.7",
        "codeception/codeception": "^4.2",
        "codeception/module-phpbrowser": "^1.0.0",
        "codeception/module-asserts": "^1.0.0",
        "symfony/process": "^5.4"
    },
    "scripts": {
        "test": [
            "@phpcs",
            "@codecept"
        ],
        "phpcbf": "./vendor/bin/phpcbf",
        "phpcs": "./vendor/bin/phpcs",
        "codecept": "./vendor/bin/codecept run",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit 256M"
    }
}
