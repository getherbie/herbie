{
    "name": "getherbie/herbie",
    "homepage": "http://www.getherbie.org",
    "description": "Herbie is a flat-file CMS & blog system. Simple installation - no database - just text files.",
    "keywords": ["herbie", "flat-file", "cms", "blog"],
    "type": "library",
    "minimum-stability": "dev",
    "license":"BSD-3-Clause",
    "require": {
        "php": ">=5.6.0",
        "symfony/yaml": "2.7.*",
        "squizlabs/php_codesniffer": "^3.0@dev"
    },
    "require-dev": {
        "pdepend/pdepend": "2.2.4",
        "phing/phing": "2.15.0",
        "phploc/phploc": "3.0.1",
        "phpmd/phpmd": "2.4.3",
        "phpunit/phpunit": "5.5.4",
        "sebastian/phpcpd": "2.0.4",
        "squizlabs/php_codesniffer": "2.7.0",
        "theseer/phpdox": "0.9.0"
    },
    "autoload": {
        "psr-4": {
            "Herbie\\": "src/system"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0"
    },
    "scripts": {
        "test": [
            "@phpcs",
            "@phpunit"
        ],
        "phpcbf": "./vendor/bin/phpcbf",
        "phpcs": "./vendor/bin/phpcs",
        "phpunit": "./vendor/bin/phpunit"
    }
}
