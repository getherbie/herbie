<?xml version="1.0"?>
<ruleset name="Herbie coding standard">
    <description>Herbie coding standard</description>

    <!-- display progress -->
    <arg value="p"/>

    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR2"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <exclude-pattern>*\.(css|js)</exclude-pattern>

    <!-- Paths to check -->
    <file>config</file>
    <file>messages</file>
    <file>src</file>
    <file>sysplugins</file>
</ruleset>