<?xml version="1.0"?>
<ruleset name="Herbie CMS coding standard">
    <description>Herbie CMS coding standard</description>

    <!-- display progress -->
    <arg value="p"/>

    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR12"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <exclude-pattern>*\.(css|js|twig)</exclude-pattern>

    <!-- Paths to check -->
    <file>config</file>
    <file>example</file>
    <file>messages</file>
    <file>src</file>
    <file>sysplugins</file>
    <!-- file>tests</file -->
</ruleset>