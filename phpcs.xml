<?xml version="1.0"?>
<ruleset name="Herbie coding standard">
    <description>Herbie coding standard</description>

    <!-- display progress -->
    <arg value="p"/>

    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR12"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <exclude-pattern>*\.(css|js|twig)</exclude-pattern>

    <!-- Paths to check -->
    <file>config</file>
    <file>messages</file>
    <file>plugins</file>
    <file>system</file>
    <!-- file>tests</file -->
    <file>website</file>
</ruleset>