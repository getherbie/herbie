    <h2 id="herbie-config" class="herbie-info-h2">Configuration ({{ config|length }})</h2>
    <div class="herbie-info-config" style="display:none">
        {% for key, _ in config %}
            {{- key -}}
            {%- if loop.last == false -%},{%- endif -%}
        {%- endfor -%}
    </div>    
    <table class="herbie-info-table">
        <tr>
            <th style="width:1%">#</th>
            <th>Name</th>
            <th>Value</th>
        </tr>
        {% for key, value in config %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ key }}</td>
                <td>{{ value }}</td>
            </tr>
        {% endfor %}
    </table>
    
    <h2 id="herbie-classes" class="herbie-info-h2">PHP Classes ({{ classes|length }})</h2>
    <div class="herbie-info-classes" style="display:none">
        {%- for class in classes -%}
            {{- class -}}
            {%- if loop.last == false -%},{%- endif -%}
        {%- endfor -%}
    </div>
    <table class="herbie-info-table">
        <tr>
            <th style="width:1%">#</th>
            <th>Name</th>
        </tr>
        {% for class in classes %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ class }}</td>
            </tr>
        {% endfor %}
    </table>

