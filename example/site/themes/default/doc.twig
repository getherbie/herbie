{% extends "main.twig" %}

{% block content %}
    <div class="content-container">
        <div class="container">
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-2-3">
                    <nav class="breadcrumb">
                        {{ breadcrumb(' / ', ['', '<i class="fa fa-home"></i>']) }}
                    </nav>
                    <div class="content">
                        {{ content.default|raw }}
                    </div>
                </div>
                <div class="pure-u-1 pure-u-md-1-3">
                    <div class="sidebar">
                        <h3>Documentation</h3>
                        <ul>
                            {%- for levelOneItem in site.pageList|filter("parentRoute=doc") -%}
                                <li>
                                    <a href="{{ levelOneItem.route }}">{{- levelOneItem.title -}}</a>
                                    {% if levelOneItem.route in route %}
                                        {% set levelTwoItems = site.pageList|filter("parentRoute=" ~ levelOneItem.route) %}
                                        {% if levelTwoItems %}
                                            <ul>
                                                {%- for levelTwoItem in levelTwoItems -%}
                                                    <li>â€¢
                                                        <a href="{{ levelTwoItem.route }}">{{- levelTwoItem.title -}}</a>
                                                    </li>
                                                {%- endfor -%}
                                            </ul>
                                        {% endif %}
                                    {% endif %}
                                </li>
                            {%- endfor -%}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
