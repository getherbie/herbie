{% spaceless %}
    {{ addcss('@site/themes/default/css/styles.css') }}
    {{ addjs('@site/themes/default/js/scripts.js') }}
{% endspaceless %}
<!DOCTYPE html>
<html lang="{{ site.language }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ pagetitle(delim=' / ', siteTitle='Herbie Flat-File CMS & Blog', rootTitle='Herbie - A simple Flat-File CMS and Blogsystem', reverse=true) }}</title>
    <base href="{{ baseUrl }}">
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css" integrity="sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w" crossorigin="anonymous">
    <!--[if lte IE 8]>
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/grids-responsive-old-ie-min.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/grids-responsive-min.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.css">
    <!--<![endif]-->
    {{ outputcss() }}
</head>
<body class="{{ bodyclass() }}">
<div class="header">
    <div class="container">
        <div class="inner-container">
            <div class="pure-hidden-tablet pure-hidden-desktop">
                <a href="#menu" id="menuLink" class="menu-link">
                    <!-- Hamburger icon -->
                    <span></span>
                </a>
            </div>
            <div class="pure-g">
                <div class="pure-u-3-5 pure-u-md-1-5">
                    <h1 class="brand-title">{{ link('index', '<span class="e">E</span> Herbie') }}</h1>
                </div>
                <div class="pure-u-2-5 pure-u-md-4-5 text-right pure-hidden-phone">
                    <div class="topmenu" id="topmenu">
                        <div id="topmenu-inner">
                            <div class="pure-menu pure-menu-horizontal">
                                <ul class="pure-menu-list">
                                    {% for item in site.data.menu %}
                                        {% set active = (item.route == route) ? 'pure-menu-selected' : '' %}
                                        <li class="pure-menu-item {{ active }}">
                                            <a class="pure-menu-link" href="{{ url(item.route) }}">{{ item.label }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="mobile-menu" class="pure-hidden-phone pure-hidden-tablet pure-hidden-desktop">
    <div class="pure-menu">
        <ul class="pure-menu-list">
            {% for item in site.data.menu %}
                <li class="pure-menu-item"><a class="pure-menu-link" href="{{ url(item.route) }}">{{ item.label }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>

{% block content %}{% endblock %}

<div class="footer">
    <div class="container">
        <div class="pure-g">
            <div class="pure-u-1 pure-u-md-1-4 footer-about">
                <h3>About Herbie</h3>
                <p>Herbie is a simple Flat-File CMS- and Blogsystem based on human readable text files.</p>
            </div>
            <div class="pure-u-1 pure-u-md-1-4">
            </div>
            <div class="pure-u-1 pure-u-md-1-4 footer-links">
                <h3>Links</h3>
                <ul>
                    <li>{{ link('sitemap', 'Sitemap') }}</li>
                    <li>{{ link('contact', 'Contact') }}</li>
                    <li>{{ link('search', 'Search') }}</li>
                </ul>
            </div>
            <div class="pure-u-1 pure-u-md-1-4">
                <h3>Code</h3>
                <ul>
                    <li><a target="_blank" href="https://www.github.com/getherbie">Herbie at GitHub</a></li>
                    <li><a target="_blank" href="https://packagist.org/packages/getherbie/">Herbie at Packagist</a></li>
                </ul>
            </div>
        </div>
        <hr>
        <div class="pure-g">
            <div class="pure-u-1 footer-copyright">
                &copy; 2015 - {{ "now"|date("Y") }} Handmade by Herbie
            </div>
        </div>
    </div>
</div>
{{ outputjs() }}
</body>
</html>