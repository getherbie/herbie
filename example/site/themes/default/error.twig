{% extends "main.twig" %}

{% block content %}
    <div class="content-container">
        <div class="container">
            <div class="pure-g">
                <div class="pure-u-1 content">
                    {% if error.code == 404 %}
                        <h1>Page not found</h1>
                        <p>Oops, something got wrong! The page or resource could not be found.</p>
                        <p>{{ error.message }}</p>
                    {% else %}
                        <h1>Error</h1>
                        <p>An error happend.</p>
                        <table class="pure-table pure-table-horizontal" width="100%">
                            <tr>
                                <td>Code</td>
                                <td>{{ error.code }}</td>
                            </tr>
                            <tr>
                                <td>Message</td>
                                <td>{{ error.message }}</td>
                            </tr>
                            <tr>
                                <td>File</td>
                                <td>{{ error.file }}</td>
                            </tr>
                            <tr>
                                <td>Line</td>
                                <td>{{ error.line }}</td>
                            </tr>
                            <tr>
                                <td>Trace</td>
                                <td>{{ error.traceAsString|nl2br }}</td>
                            </tr>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
