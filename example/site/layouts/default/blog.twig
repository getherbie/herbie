{% extends "main.twig" %}

{% block content %}
    <div class="content-container">
        <div class="container">
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-2-3">
                    <div class="content">
                        {{ content.default|raw }}
                        <div class="blog-meta">
                            {{ include('@snippet/links.twig', { pageRoute: 'blog', page: page }) }}
                        </div>
                    </div>
                </div>
                <div class="pure-u-1 pure-u-md-1-3">
                    <div class="sidebar">
                        {{ include('includes/simplesearch.twig') }}
                        {{ include('@snippet/recent.twig', { pageType:'blog', title: 'Recent Posts', showDate:false, limit:3 }) }}
                        {{ include('@snippet/categories.twig', { pageRoute: 'blog', pageType:'blog', title: 'Categories', showCount:true }) }}
                        {{ include('@snippet/tags.twig', { pageRoute: 'blog', pageType:'blog', title: 'Tags', showCount:true }) }}
                        {{ include('@snippet/authors.twig', { pageRoute: 'blog', pageType:'blog', title: 'Authors', showCount:true }) }}
                        {{ include('@snippet/archives.twig', { pageRoute: 'blog', pageType:'blog', title: 'Archive', showCount:true }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
