            if ($('div.alert').is(":visible")) {
                $('div.alert').slideUp(50);
            }
        };
        $("textarea").autosize();
        $(document).on("click", "html", function () {
            if ($('a.delete-confirmed').is(":visible")) {
                $('a.delete-confirmed').removeClass('delete-confirmed');
            }
            alertSlideUp();
        });
        $(window).scroll(function() {
            alertSlideUp();
        });
    });
</script>

