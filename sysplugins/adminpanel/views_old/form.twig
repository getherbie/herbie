{% extends "@plugin/adminpanel/layouts/main.twig" %}

{% block title %}Seite editieren{% endblock %}
{% block subtitle %}{{ path }}{% endblock %}

{% block alert %}
    {% if saved %}<div class="alert alert-success">Die Seite wurde gesichert.</div>{% endif %}
{% endblock %}

{% block content %}

    <form action="" method="post" class="pure-form">

        <label>Eigenschaften</label>
        <textarea class="pure-input-1" rows="5" cols="60" name="data">[UNUSED]</textarea>

        <label>Inhalt</label>
        <textarea class="pure-input-1" rows="30" cols="60" name="content">{{ content }}</textarea>

        <button class="pure-button pure-button-primary" name="button1" type="submit">Sichern</button>
        <button class="pure-button pure-button-primary" name="button2" type="submit">Sichern & schliessen</button>
        <button class="pure-button pure-button-primary" name="button3" type="submit">Sichern & ansehen</button>
        <a href="?action={{ action }}" class="pure-button">Abbrechen</a>
    </form>

{% endblock %}
