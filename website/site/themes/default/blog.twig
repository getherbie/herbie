{% extends "main.twig" %}

{% block content %}
    <div class="content-container">
        <div class="container">
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-3-4">
                    <div class="content">
                        {{ content.default|raw }}
                        {{ page_taxonomies(page, pageRoute='blog') }}
                    </div>
                </div>
                <div class="pure-u-1 pure-u-md-1-4">
                    <div class="sidebar">
                        {{ include('includes/simplesearch.twig') }}
                        {{ pages_recent(limit=3, pageType='blog', showDate=false) }}
                        {{ taxonomy_categories(pageRoute='blog', pageType='blog', showCount=true) }}
                        {{ taxonomy_tags(pageRoute='blog', pageType='blog', showCount=true) }}
                        {{ taxonomy_authors(pageRoute='blog', pageType='blog', showCount=true) }}
                        {{ taxonomy_archive(pageRoute='blog', pageType='blog', showCount=true) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
