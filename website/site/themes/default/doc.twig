{% extends "main.twig" %}

{% block content %}
    <div class="content-container">
        <div class="container">
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-3-4">
                    <nav class="breadcrumb">
                        {{ h_menu_breadcrumb(' / ', ['', icon('house-fill')]) }}
                    </nav>
                    <div class="content">
                        {{ content.default|raw }}
                    </div>
                </div>
                <div class="pure-u-1 pure-u-md-1-4">
                    <div class="sidebar">
                        {{ include('includes/simplesearch.twig') }}
                        <h4>Documentation</h4>
                        {{ h_menu_tree(route='doc', class='menu') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
