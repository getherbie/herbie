{% extends "main.twig" %}

{% block content %}
    {% set homeIcon = icon('house-fill') %}
    <div class="content-container">
        <div class="container">
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-3-4">
                    <nav class="breadcrumb">
                        {{ breadcrumb(' / ', ['', homeIcon]) }}
                    </nav>
                    <div class="content">
                        {{ content.default|raw }}
                    </div>
                </div>
                <div class="pure-u-1 pure-u-md-1-4">
                    <div class="sidebar">
                        {{ menu(route='doc', class='menu') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
